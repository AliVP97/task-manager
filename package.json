{
  "name": "task-manager-app",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "npm run dev --workspace=task-manager-backend",
    "frontend": "npm run dev --workspace=task-manager-frontend",
    "build": "npm run build --workspace=task-manager-frontend",
    "start": "npm run start --workspace=task-manager-backend"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {}
}
